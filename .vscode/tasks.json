{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			//"label": "C/C++: cl.exe 生成活动文件",
			// 报错 找不到任务 g++ 所以修改下：
			"label": "task g++",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe:",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "编译器: cl.exe"
		}
	]
}